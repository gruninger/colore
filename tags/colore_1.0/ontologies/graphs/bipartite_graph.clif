
(cl-text bipartite_graph

(cl-imports undirected_graph)

(forall (x y)
	(if	(cycle x ... y)
		(even x ... y)))

(forall (x y z)
	(iff	(path x ... y z)
		(and	(path x ... y)
			(adj y z))))

(forall (x y)
	(iff	(cycle x ... y)
		(and	(path x ... y)
			(adj x y))))

(forall (x y)
	(iff	(odd x ... y)
		(or	(adj x y)
			(exists (z)
				(and	(adj x z)
					(even z ... y))))))

(forall (x y)
	(iff	(even x ... y)
		(or	(adj x y)
			(exists (z)
				(and	(adj x z)
					(odd z ... y))))))

)
