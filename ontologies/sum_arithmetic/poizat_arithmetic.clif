(cl-text http://colore.oor.net/sum_arithmetic/poizat_arithmetic.clif

(cl-imports http://colore.oor.net/sum_arithmetic/sum_def.clif)

(forall (x y)
	(= (sum x y) (sum y x)))

(forall (x y z)
	(= (sum (sum x y) z) (sum x (sum y z))))

(forall (x)
	(= x (sum x zero)))

(forall (x)
	(not (= (x (sum x one)))))

(forall (x y)
	(if	(= one (sum x y))
		(or	(= x zero)
			(= x one))))

(forall (x y)
	(exists (z)
		(or	(= x (sum y z))
			(= y (sum x z)))))

(forall (x y u v)
	(if	(and	(= x (sum y u))
			(= y (sum x v)))
		(= x y)))

)
