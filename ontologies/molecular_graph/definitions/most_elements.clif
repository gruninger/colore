(cl-comment 'Valence Class Definitions')

(cl-comment 'Axiom: MED-1')
(cl-comment 'Definition for Single Valence')
(forall (x)
	(iff (singlevalence x)
		(and (atom x)
			(forall (b1 b2 a1 a2)
				(if (and (bond b1)(bond b2)(mol a1 b1)(mol x b1)(mol a2 b2)(mol x b2))
					(= b1 b2))))))

(cl-comment 'Axiom: MED-2')
(cl-comment 'Definition for Double Valence')
(forall (x)
	(iff (doublevalence x)
		(and (atom x)
			(forall (b1 b2 b3 a1 a2 a3)
				(if
					(and (atom a1)(atom a2)(atom a3)
						(bond b1)(bond b2)(bond b3)
						(mol a1 b1)(mol x b1)
						(mol a2 b2)(mol x b2)
						(mol a3 b3)(mol x b3))
				(or (= b1 b2)(= b1 b3)(= b2 b3)))))))

(cl-comment 'Axiom: MED-3')
(cl-comment 'Definition for Triple Valence')
(forall (x)
	(iff (triplevalence x)
		(and (atom x)
			(forall (b1 b2 b3 b4 a1 a2 a3 a4)
				(if
					(and (atom a1)(atom a2)(atom a3)(atom a4)
						(bond b1)(bond b2)(bond b3)(bond b4)
					(mol a1 b1)(mol x b1)
						(mol a2 b2)(mol x b2)
						(mol a3 b3)(mol x b3)
						(mol a4 b4)(mol x b4))
				(or (= b1 b2)(= b1 b3)(= b1 b4)(= b2 b3)(= b2 b4)(= b3 b4)))))))

(cl-comment 'Axiom: MED-4')
(cl-comment 'Definition for Quad Valence')
(forall (x)
	(iff (quadvalence x)
		(and (atom x)
			(forall (b1 b2 b3 b4 b5 a1 a2 a3 a4 a5)
				(if (and (atom a1)(atom a2)(atom a3)(atom a4)(atom a5)
						(bond b1)(bond b2)(bond b3)(bond b4)(bond b5)
						(mol a1 b1)(mol x b1)
						(mol a2 b2)(mol x b2)
						(mol a3 b3)(mol x b3)
						(mol a4 b4)(mol x b4)
						(mol a5 b5)(mol x b5))
					(or (= b1 b2)(= b1 b3)(= b1 b4)(= b1 b5)
						(= b2 b3)(= b2 b4)(= b2 b5)
						(= b3 b4)(= b3 b5)
						(= b4 b5)))))))

(cl-comment 'New valence classes for elements.')
(cl-comment 'These axioms indicate that they can have at most a certain number of bonds.')

(cl-comment 'Axiom: ME-1')
(cl-comment 'Hydrogen has a single valence')
(forall (x)
	(if (hydrogen x)
		(singlevalence x)))

(cl-comment 'Axiom: ME-2')
(cl-comment 'Oxygen has a double valence')
(forall (x)
	(if (oxygen x)
		(doublevalence x)))

(cl-comment 'Axiom: ME-3')
(cl-comment 'Nitrogen has a triple valence')
(forall (x)
	(if (nitrogen x)
		(triplevalence x)))

(cl-comment 'Axiom: ME-4')
(cl-comment 'Carbon has a quad valence')
(forall (x)
	(if (carbon x)
		(quadvalence x)))

(cl-comment 'Axiom: ME-5')
(cl-comment 'A halogen is a fluorine, chlorine, bromine, iodine or astatine atom.')
(forall (x)
	(if (halogen x)
		(or (fluorine x)(chlorine x)(bromine x)(iodine x)(astatine x))))

(cl-comment 'Axiom: ME-6')
(cl-comment 'An X Group is a halogen.')
(forall (x)
	(iff (x_group x)
		(halogen x)))

