(cl-text http://colore.oor.net/molecular_graph/definitions/lithium.clif

(cl-comment 'Element name: lithium')

(cl-comment 'Valence number: 1')

(cl-comment 'Lithium has at least 1 covalent bonds.')

(forall (x) 
	(if (lithium x)
		(and (atom x)
			(exists (a1 b1)
				(and (atom a1)
					(bond b1)
					(mol a1 b1)(mol x b1))))))

(cl-comment 'Lithium has at most 1 covalent bonds.')

(forall (x a1 a2 b1 b2)
	(if (and (lithium x)
		(atom a1)
		(atom a2)
		(bond b1)
		(bond b2)
		(mol a1 b1)(mol x b1)
		(mol a2 b2)(mol x b2))
	(= b1 b2)))


)