(cl-text http://colore.oor.net/graphs/cograph.clif

(cl-imports http://colore.oor.net/graphs/simple_graph.clif)

(forall (x y z w)
	(if	(and	(adj x y)
			(adj y z)
			(adj z w))
		(or	(adj x z)
			(adj x w)
			(adj y w))))

)
