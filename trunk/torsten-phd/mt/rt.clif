(cl-text mt/rt

(cl-comment "axioms of the mereotopology RT")

(cl-imports mt/rtminus)

(cl-comment "D11: Weak contact")

(forall (x y)
	(iff	(WCont x y)
		(and 	(not (C (closure x) (closure y)))
			(forall (z)
				(if 	(and	(P x z)
						(OP z) )
					(C (closure z) y)
)	)	)	)	)


(cl-comment "A12: Existence of a weak contact")

(exists (x y)
	(WCont x y)
)

)
