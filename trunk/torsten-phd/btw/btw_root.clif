(cl-text btw/btw_root

(cl-comment "root axioms of quaternary betweenness")


(forall (r a b c)
	(if
		(Btw r a b c)
		(Btw r c b a)
	)
)


(forall (r a b c)
	(if 	(and	(Btw r a b c)
			(Btw r a c b))
		(a=b)))

(forall (r a b)
	(if 	(Btw r a b a)
		(a=b)))

(forall (r a b x y)
	(if
		(and
			(Btw r x a b)
			(Btw r a b y)
			(not (= a b)))
		(Btw r x a y)
	)
)

(forall (r a b x y)
	(if
		(and
			(Btw r x a b)
			(Btw r a y b)
		)
		(Btw r x a y)
	)
)

)
