(cl-text contact

(cl-comment "Axioms of a distributive contact relation which satifies the sum axiom C4")

(cl-imports weak_contact)

(cl-comment "C4: Sum distributes over parts")

(forall (x y z) 	
	(if 	(c x (join y z)) 
		(or 	(c x y)
			(c x z))))

)
