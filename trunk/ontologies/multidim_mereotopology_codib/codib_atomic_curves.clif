(cl-text multidim_mereotopology_codib/codib_atomic_curves.clif

(cl-imports multidim_mereotopology_codi/definitions/point.clif)

(cl-imports multidim_mereotopology_codib/definitions/atomic_curve.clif)

(cl-imports multidim_mereotopology_codib/definitions/atomic_loop_curve.clif)

(cl-imports multidim_mereotopology_codib/definitions/atomic_curve_segment.clif)

(cl-imports multidim_mereotopology_codib/definitions/closed.clif)

(cl-imports multidim_mereotopology_codi/codi_atomic_point_regions.clif)

(cl-imports multidim_mereotopology_codib/codib.clif)

(cl-comment 'Restrict atomic curves.')


(cl-comment 'Atomic curves except for atomic loop curves only properly contain points, which must be in their boundary.')

(forall (x y)
	(if
		(and
			(AtomicCurve x)
            (not (AtomicLoopCurve x))
			(Cont y x)
			(not (= x y))
		)
		(and
			(Point y)
			(BCont y x)
		)
	)
)



(cl-comment 'Atomic curves contain no more than two distinct points.')

(forall (x p1 p2 p3)
	(if
		(and
			(AtomicCurve x)
			(Point p1)
			(Point p2)
			(Point p3)
            (Cont p1 x)
            (Cont p2 x)
            (Cont p3 x)
		)
		(or
			(= p1 p2)
			(= p1 p3)
            (= p2 p3)
		)
	)
)

(cl-comment 'Atomic curves that contain two distinct points are not closed, i.e. have a boundary.')

(forall (x p1 p2)
	(if
		(and
			(AtomicCurve x)
			(Point p1)
			(Point p2)
			(not (= p1 p2))
            (Cont p1 x)
            (Cont p2 x)
		)
		(not (Closed x))
	)
)


(cl-comment 'Every curve has an atomic part. Together with the existence of complements, this ensures that all curves are entirely constituted of atomic parts.')

(forall (x)
    (if
        (Curve x)
        (exists (y)
            (and
                (P y x)
                (AtomicCurve y)
            )
        )
    )
)


(cl-comment 'A point is boundary contained in a non-atomic curve segment iff it is boundary contained in exactly one constituent atomic curve.')

(forall (x y)
	(if
        (and
            (Point x)
            (Curve y)
            (not (AtomicCurveSegment y))
        )
		(iff
			(BCont x y)
			(exists (s1)
				(and
					(AtomicCurve s1)
					(P s1 y)
					(BCont x s1)
					(forall (s2)
						(if
							(and
								(P s2 y)
								(AtomicCurve s2)
								(BCont x s2)
							)
							(= s1 s2)
						)
					)
				)
			)		
		)
	)
)

)