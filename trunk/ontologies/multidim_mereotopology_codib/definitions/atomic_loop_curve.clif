(cl-text multidim_mereotopology_codib/definitions/atomic_loop_curve.clif

(cl-imports multidim_mereotopology_codi/definitions/point.clif)

(cl-imports multidim_mereotopology_codi/definitions/curve.clif)

(cl-imports multidim_mereotopology_codib/definitions/endpoint.clif)

(cl-imports multidim_mereotopology_codi/codi_atomic_point_regions.clif)

(cl-imports multidim_mereotopology_codib/codib.clif)


(cl-comment 'An atomic loop curve is a closed (unbounded) curve without proper parts that contains exactly one point and that contains no endpoint.')

(forall (x)
	(iff
		(AtomicLoopCurve x)
		(and
			(Curve x)
			(forall (y)
				(not (PP y x))
			)
			(exists (y)
				(and
					(Point y)
					(Cont y x)
					(forall (z)
						(if
							(and
								(Point z)
								(Cont z x)
							)
							(= y z)
						)
					)
				)
			)
			(forall (y)
				(not (Endpoint y x))
			)
		)
	)
)

)
