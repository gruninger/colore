(cl-text multidim_mereotopology_codib/definitions/simple_loop_curve.clif

(cl-imports multidim_mereotopology_codib/definitions/atomic_loop_curve.clif)

(cl-imports multidim_mereotopology_codib/definitions/atomic_curve_segment.clif)

(cl-imports multidim_mereotopology_codib/definitions/simple_curve_segment.clif)

(cl-imports multidim_mereotopology_codib/codib_atomic_curves.clif)

(cl-comment 'A simple loop curve x is a (unbounded) curve that is either an atomic loop curve or a simple curve segment y connected at its endpoints to an atomic curve segment z such that any other proper part v of x (i.e. any other curve v that is contained in x) is either z or part of y.')


(forall (x)
	(iff
		(SimpleLoopCurve x)
		(or
			(AtomicLoopCurve x)
			(exists (y z e1 e2)
				(and
					(not (= y z))
					(SimpleCurveSegment y)
					(PP y x)
					(AtomicCurveSegment z)
					(PP z x)
					(Endpoint e1 y)
					(Endpoint e2 y)
					(Endpoint e1 z)
					(Endpoint e2 z)
					(not (= e1 e2))
					(not (PO y z))
					(forall (v)
						(if 
							(and
								(PP v x)
								(not (= v z))
							)
							(P v y)
						)
					)
				)
			)
		)
	)
)


)
