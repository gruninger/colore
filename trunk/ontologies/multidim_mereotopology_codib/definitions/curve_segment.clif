(cl-text multidim_mereotopology_codib/definitions/curve_segment.clif

(cl-imports multidim_mereotopology_codib/definitions/atomic_curve_segment.clif)

(cl-imports multidim_mereotopology_codi/definitions/curve.clif)

(cl-imports multidim_mereotopology_codib/codib_atomic_curves.clif)



(cl-comment 'A curve segment is a curve of which each part overlaps some atomic curve segment.')


(forall (x)
	(iff
        (CurveSegment x)
		(and
            (Curve x)
			(forall (y)
                (if
                    (P y x)
                    (exists (z)
                        (and
                            (AtomicCurveSegment z)
                            (PO y z)
                        )
                    )
                )
            )
		)
	)
)


)
