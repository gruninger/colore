(cl-module multidim_mereotopology_codib/theorems/atomic_loop_curve_theorems.clif

(cl-imports multidim_mereotopology_codib/definitions/atomic_loop_curve.clif)

(cl-imports multidim_mereotopology_codib/definitions/closed.clif)

(cl-imports multidim_mereotopology_codi/definitions/icon.clif)


(cl-comment 'An atomic loop curve is closed.')

(forall (x)
	(if
		(AtomicLoopCurve x)
		(Closed x)
	)
)



(cl-comment 'An atomic loop curve has no proper part.')

(forall (x)
    (if
        (AtomicLoopCurve x)
        (forall (y)
            (not (PP y x))
        )        
    )
)


(cl-comment 'An atomic loop curve is ICon.')


(forall (x)
    (if
        (AtomicLoopCurve x)
        (ICon x)
    )
)

)