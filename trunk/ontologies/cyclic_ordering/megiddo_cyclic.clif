
(cl-text http://colore.oor.net/cyclic_ordering/megiddo_cyclic.clif

(forall (x y z)
	(if	(C x y z)
		(not (= x y))))

(forall (x y z)
	(if	(C x y z)
		(not (C z y x))))

(forall (x y z)
	(if	(and	(not (= x y))
			(not (= y z))
			(not (= x z)))
		(or	(C z y x)
			(C x y z))))

(forall (x y z w)
	(if	(and	(C x y z)
			(C x z w))
		(C x y w)))

(forall (x y z)
	(if	(C x y z)
		(C y z x)))

)
