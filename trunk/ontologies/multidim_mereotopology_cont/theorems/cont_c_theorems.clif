(cl-text multidim_mereotopology_cont/cont_c_theorems.clif

(cl-imports multidim_mereotopology_cont/definitions/c.clif)

(cl-comment 'C-T2: C reflexive')

(forall (x)
	(if
		(not (ZEX x))
		(C x x)
	)
) 


(cl-comment 'C-T3: C symmetric')

(forall (x y)
	(if
		(C x y)
		(C y x)
	)
) 


(cl-comment 'C-T4: nothing in contact with ZEX')

(forall (x y)
	(if
		(ZEX x)
		(not (C y x))
	)
) 


(cl-comment 'C-T5: contact implies C monotone')

(forall (x y)
	(if
		(Cont x y)
		(forall (z)
			(if
				(C z x)
				(C z y)
			)
		)
	)
) 


)