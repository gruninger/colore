(cl-text dolce_constitution2ideal_cem_wmg3

(cl-comment "Translation definition for dolce_temporary_parthood into ideal_cem_wmg.")

(forall (x y)
	(iff (in3 x y)
		(or
			(and (PRE x y)(T y)(Q x))
			(and (PRE y x)(T x)(Q y))
			(and (= x y)(or (Q y)(T y))))))

(forall (x)
	(iff (line3 x)
		(Q x)))

(forall (x)
	(iff (point3 x)
		(T x)))

(forall (x y)
	(iff (part3 x y)
		(and (P x y)(T x)(T y))))

(forall (x)
	(iff (L_1 x)
		(ED x)))
	
(forall (x)
	(iff (L_2 x)
		(PD x)))

(forall (x)
	(iff (L_3 x)
		(Q x)))

(forall (x)
	(iff (L_4 x)
		(PED x)))

(forall (x)
	(iff (L_5 x)
		(NPED x)))

(cl-comment "Additional translation definitions for relations")
(forall (x)
	(iff (AtP x)
		(atomic_part x)))

(forall (x y)
	(iff (DJ x y)
		(disjoint x y)))

(forall (x y)
	(iff (O x y)
		(overlaps x y)))

(forall (x y)
	(iff (PP x y)
		(ppart x y)))

(forall (x y)
	(iff (U x y)
		(underlaps x y)))

(forall (x y z)
	(iff (SUM z x y)
		(sum x y z)))

(cl-comment "Sum Relation")
(forall (x y z)
	(if (and (T x)(T y)(T z))
		(iff (SUM z x y)
			(forall (w)
				(if (T w)
					(iff (O w z)
						(or	(O w x)(O w y))))))))

(cl-comment "Additional translation definitions for relations")
(forall (x y t)
	(iff (tPP x y t)
		(tppart x y t)))

(forall (x y t)
	(iff (tO x y t)
		(toverlaps x y t)))

(forall (x y t)
	(iff (tU x y t)
		(tunderlaps x y t)))

)