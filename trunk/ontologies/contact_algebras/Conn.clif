(cl-text http://colore.oor.net/contact_algebras/Conn.clif

(cl-comment "Con: Connection axiom (connection of an entity with its complement)")

(forall (x) 	
	(if 	
		(and 	
			(not (= x zero)) 
			(not (= x one))) 
		)
		(exists (y)
			(and 	
				(complement x y)
				(c x y)
			)
		)
	)
)

)