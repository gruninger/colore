(cl-text http://colore.oor.net/lattices/bounded_lattice.clif

(cl-imports http://colore.oor.net/lattices/lattice.clif)

(cl-comment "Bounded lattice axioms")

(cl-comment "L5: Bottom (zero)")

(exists (zero)
	(forall (x)
		(leq zero x)
))


(cl-comment "L6: Top (one)")

(exists (one)
	(forall (x)
		(leq x one)
))

)
