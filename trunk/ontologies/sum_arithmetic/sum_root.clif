(cl-text http://colore.oor.net/sum_arithmetic/sum_root.clif

(forall (x y)
	(= (plus x y) (plus y x)))

(forall (x y z)
	(= (plus (plus x y) z) (plus x (plus y z))))

(forall (x y)
	(exists (z)
		(or	(= x (sum y z))
			(= y (sum x z)))))

(forall (x y u v)
	(if	(and	(= x (sum y u))
			(= y (sum x v)))
		(= x y)))

)
