(cl-text multidim_mereotopology_codi/ep_theorems.clif

(cl-imports multidim_mereotopology_codi/codi_basic.clif)

(cl-imports multidim_mereotopology_codi/definitions/ep.clif)

(cl-imports multidim_mereotopology_codi/definitions/epp.clif)

(cl-comment "EP-T1: parthood reflexive")

(forall (x)
	(if
		(not (ZEX x))
		(P x x)
	)
)


(cl-comment "EP-T2: parthood antisymmetric")

(forall (x y)
	(if
		(and
			(P x y)
			(P y x)
		)
		(= x y)
	)
)


(cl-comment "EP-T3: parthood transitive")

(forall (x y z)
	(if
		(and
			(P x y)
			(P y z)
		)
		(P x z)
	)
)


(cl-comment "EP-T4")

(forall (x y z)
	(if
		(and
			(P x y)
			(< z x)
		)
		(< z y)
	)
)


(cl-comment "EP-T5")

(forall (x y z)
	(if
		(and
			(P x y)
			(< y z)
		)
		(< x z)
	)
)


(cl-comment "EP-T6")

(forall (x y z)
	(if
		(and
			(P x y)
			(EqDim z x)
		)
		(EqDim z y)
	)
)


(cl-comment "EP-T7")

(forall (x y z)
	(if
		(and
			(P x y)
			(EqDim z y)
		)
		(EqDim z x)
	)
)


(cl-comment "EP-T8: parthood requires contact")

(forall (x y z)
	(if
		(P x y)
		(C x y)
	)
)


(cl-comment "EP-T9: Extensionality of parthood")

(forall (x y)
	(if
		(forall (z)
			(iff
				(P z x)
				(P z y)
			)
		)
		(= x y)
	)
)


)