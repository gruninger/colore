(cl-text multidim_mereotopology_codi/codi_plp.clif

(cl-imports multidim_mereotopology_codi/codi_pl.clif)


(cl-comment "PLP-D1: planes are maximal in their dimension")

(forall (x)
	(if
		(Pl x)
		(and
			(Max x)
			(exists (y z)
				(and
					(Covers x y)
					(Covers y z)
					(Pt z)
				)
			)
		)
	)
)		


)
